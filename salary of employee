#include <stdio.h>
void main()
{
float basicsal, grosssal, hra ,ta, net,tax;
printf("enter basicsal:");
scanf("%f", &basicsal);

hra=basicsal*0.10;
ta=basicsal*0.05;
grosssal=basicsal+ta+hra;
tax=0.02* grosssal;

net= grosssal-tax;
printf("%d", net);
 printf("\nBasic Salary: %.2f", basicsal);
    printf("\nHRA (10%%): %.2f", hra);
    printf("\nTA (5%%): %.2f", ta);
    printf("\nGross Salary: %.2f", grosssal);
    printf("\nTax (2%%): %.2f", tax);
    printf("\nNet Salary: %.2f\n", net);
